# -*- mode: ruby -*-
# vi: set ft=ruby :


# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = '2'

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  if Vagrant.has_plugin?('landrush')
    puts '*** Landrush enabled ***'
    config.landrush.enabled = true
    config.landrush.tld = 'dev'
    config.landrush.guest_redirect_dns = false
  end

  config.vm.box = 'matyunin/centos7'
    config.vm.define 'tower', primary: true do |tower|
      config.vm.provider :virtualbox do |vb, override|
        vb.customize ['modifyvm', :id, '--memory', '2048']
      end
    tower.vm.network 'private_network', type: 'dhcp'
  end

  config.vm.hostname = 'tower.vagrant.dev'

  config.vm.provision 'file', source: '.boto.cfg', destination: '/tmp/boto.cfg'
  config.vm.provision 'shell', inline: 'sudo mv /tmp/boto.cfg /etc/boto.cfg'

  config.vm.provision 'ansible' do |ansible|
    ansible.playbook = 'tower.yml'
    ansible.verbose = 'v'
    ansible.sudo = 'true'
    ansible.sudo_user = 'root'
    ansible.host_key_checking = 'false'
  end
end