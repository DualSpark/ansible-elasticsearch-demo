{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "version_id": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-2",
      "source_ami": "ami-6ac2a85a",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "dualspark elasticsearch demo {{timestamp}}",
      "ami_description": "git sha: {{user `version_id`}}",
      "vpc_id": "vpc-aa986ecf"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/beaver.init.d",
      "destination": "/tmp/beaver"
    },
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": [
        "scripts/update-python-utils.sh",
        "scripts/elk-elasticsearch.sh"
      ]
    }
  ]
}