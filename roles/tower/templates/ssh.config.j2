Host bastion
    User                   {{ bastion_user | default('ubuntu') }}
    HostName               {{ bastion_host | default('ec2-54-148-35-101.us-west-2.compute.amazonaws.com') }}
    ProxyCommand           none
    Port                   22
    IdentityFile           {{ bastion_key_name | default('bastionInstanceKey') }}.pem
    BatchMode              yes
    PasswordAuthentication no

Host *
    ServerAliveInterval    60
    TCPKeepAlive           yes
    ProxyCommand           ssh -q -A {{ instance_user | default('ubuntu') }}@###.###.###.### nc %h %p
    ControlMaster          auto
    ControlPath            ~/.ssh/mux-%r@%h:%p
    ControlPersist         8h
    User                   ubuntu
    IdentityFile           {{ ec2_key_name | default('ec2InstanceKey') }}.pem
